<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_name"
        android:hint="add tags to your product separate with commas"
        android:layout_below="@+id/edit_phone"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/loc"
        android:layout_marginTop="15dp"
        android:hint="Location"
        android:layout_alignStart="@+id/add"
        android:layout_below="@+id/add"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/loc"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/loc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:hint="Address"
        android:layout_marginTop="230dp"
        android:layout_alignRight="@+id/edit_phone"
        android:layout_alignEnd="@+id/edit_phone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/home"
        android:layout_alignBottom="@+id/add"
        android:layout_alignStart="@+id/textView"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/view"
        card_view:cardBackgroundColor="#f42414af"

        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:hint="Product/Skill Name"
            android:layout_alignParentTop="true"
           android:layout_marginLeft="70dp"
            android:textColorHint="#fff5efff"
            android:layout_marginTop="33dp"
            android:textColor="#fff5efff" />

        <EditText
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="60dp"
            android:ems="10"
            android:hint="description"
            android:textColorHint="#fff5efff"
            android:id="@+id/desc"
            android:layout_above="@+id/tag_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp" />

    </android.support.v7.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/textView"
    android:layout_alignBottom="@+id/edit_phone"
    android:drawableLeft="@drawable/call"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone"
        android:layout_toRightOf="@+id/textView"
        android:layout_below="@+id/loc"
        android:hint="Phone"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/submit"
        android:layout_toStartOf="@+id/submit" />


</RelativeLayout>