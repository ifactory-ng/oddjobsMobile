<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_name"
        android:hint="add tags to your Skill separate with commas"
        android:layout_below="@+id/edit_phone"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/loc"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="120dp"
        android:hint="Location"
        android:layout_below="@+id/add"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/loc"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/loc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/add"
        android:hint="Address"
        android:layout_marginRight="16dp"
        android:layout_marginTop="175dp"
    android:layout_marginLeft="120dp"
  />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@drawable/home"
        android:layout_alignBottom="@+id/add"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"/>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/view"
        card_view:cardBackgroundColor="#9E9E9E"

        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:hint="Product/Skill Name"
            android:layout_alignParentTop="true"
           android:layout_marginLeft="70dp"
            android:textColorHint="#fff5efff"
            android:layout_marginTop="20dp"
            android:textColor="#fff5efff" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:hint="description"
            android:textColorHint="#fff5efff"
            android:id="@+id/desc"
            android:layout_above="@+id/tag_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp" />

    </android.support.v7.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/tag_name"
    android:layout_alignLeft="@+id/tag_name"
    android:layout_alignBottom="@+id/edit_phone"
    android:drawableLeft="@drawable/call"
    android:layout_marginLeft="16dp"/>
    <EditText

        android:layout_height="wrap_content"
        android:id="@+id/edit_phone"
        android:layout_width="180dp"
        android:layout_marginRight="16dp"

        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/textView"
        android:layout_below="@+id/loc"
        android:hint="Phone"
        android:layout_marginTop="15dp"
        android:inputType="phone" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="save"
    android:layout_below="@+id/tag_name"
    android:layout_marginTop="12dp"
    android:id="@+id/save"/>

</RelativeLayout>