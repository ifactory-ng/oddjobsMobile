<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view4"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#1E88E5"
    android:id="@+id/frame">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:id="@+id/imageView1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="Smile Mmumene"

        android:id="@+id/skillowner"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="24dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:id="@+id/product_locale"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@+id/skillowner"
        android:text="Calabar"
        android:layout_marginTop="59dp" />

</FrameLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/product_about"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/product_title"
            android:background="#fff6f6f6" />

        <com.gc.materialdesign.views.ButtonFloat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="90dp"
            materialdesign:iconDrawable="@mipmap/bookmark"
            />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Electrician"
        android:id="@+id/product_title"
        android:layout_below="@+id/frame"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:textAppearance="?android:textAppearanceLarge"
            />
    <View
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#666"
        android:layout_below="@+id/product_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="26dp"
        android:id="@+id/line"
        />
</RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card5"
        android:layout_below="@+id/card_view4"
        android:layout_marginTop="30dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:id="@+id/product_numbr"
        android:text="070-000-12345"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:background="#666"
            android:id="@+id/separate"
            android:layout_toEndOf="@+id/product_numbr"
            android:layout_alignBottom="@+id/product_numbr"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/call"
            android:id="@+id/fone"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/separate"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/mail"
                android:layout_toRightOf="@+id/fone"
                android:layout_alignBottom="@+id/fone"
                android:layout_marginLeft="36dp"/>



    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:id="@+id/product_address"
        android:layout_alignStart="@+id/product_numbr" />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:layout_below="@+id/product_numbr"
        android:layout_alignStart="@+id/product_numbr"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/bookmarksubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card5"
        android:layout_marginLeft="240dp"
        android:text="Review" />

</RelativeLayout>