<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView1"
        android:background="#fff6f6f6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_about"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff6f6f6" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:id="@+id/product_locale"
        android:layout_below="@+id/product_about"
        android:layout_alignParentLeft="true"
        android:background="#fff6f6f6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:id="@+id/product_number"
        android:layout_below="@+id/product_locale"
        android:layout_alignParentLeft="true"
        android:background="#fff6f6f6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:background="#fff6f6f6"
        android:id="@+id/product_email"
        android:layout_alignBaseline="@+id/product_number"
        android:layout_toRightOf="@+id/product_number"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#fff6f6f6"
        android:layout_marginTop="20dp"
        android:id="@+id/product_address"
        android:layout_below="@+id/product_locale"
        android:layout_alignLeft="@+id/product_locale"
        android:layout_alignStart="@+id/product_locale" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_button"
        android:id="@+id/review"


        android:background="#ffffffff"
        android:layout_above="@+id/bookmark"
        android:layout_toRightOf="@+id/ratingBar3"
        android:layout_toEndOf="@+id/ratingBar3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookmark"
        android:id="@+id/bookmark"
        android:background="#ffffffff"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_toRightOf="@+id/ratingBar3"
        android:layout_toEndOf="@+id/ratingBar3" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:layout_above="@+id/product_about"
        android:layout_alignLeft="@+id/product_about"
        android:layout_alignStart="@+id/product_about" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#fff6f6f6"
        android:id="@+id/product_title"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignRight="@+id/product_about"
        android:layout_alignEnd="@+id/product_about" />

</RelativeLayout>