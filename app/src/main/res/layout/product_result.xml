<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:id="@+id/picturecontainer">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:id="@+id/propic"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SkillName"
                android:id="@+id/name"
                android:textStyle="bold"
                android:layout_below="@+id/propic"
                android:layout_marginLeft="124dp"
                android:layout_centerVertical="true"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:layout_below="@+id/name"
                android:text="Address"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="12dp"/>
        </RelativeLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picturecontainer"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/aboutHeader"
                android:textStyle="bold"
                android:textSize="24dp"
                android:typeface="sans"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/abouttxt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/aboutHeader"
                android:text="lorem ipsum corsus lorem ipsum corsus
                lorem ipsum corsus lorem ipsum corsus
                lorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsuslorem ipsum corsus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/abouttxt"
                android:id="@+id/phone"
                android:layout_marginTop="16dp"
                android:text="View Contact"
                android:layout_alignLeft="@+id/abouttxt"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/phone"
                android:layout_below="@+id/abouttxt"
                android:layout_toRightOf="@+id/phone"
                android:layout_toEndOf="@+id/phone"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="52dp"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:text="Calabar"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/phone"
                android:layout_alignStart="@+id/phone"
                android:layout_alignLeft="@+id/phone"
                android:textSize="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/location"
                android:id="@+id/localid"
                android:layout_below="@+id/phone"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

        </RelativeLayout>

    </ScrollView>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_alignParentStart="true" />

</RelativeLayout>