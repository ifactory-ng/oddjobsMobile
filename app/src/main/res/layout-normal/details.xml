<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/lay"
>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#969"
       >



            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/pro_pic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/name"
                    android:layout_marginBottom="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="12dp"
                    android:typeface="monospace"
                    android:textColor="#d3d3d3"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="location"
                    android:textColor="#d3d3d3"

                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="150dp"
                    android:id="@+id/addr" />

            </FrameLayout>
            </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view1"

        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:id="@+id/aboutme"
                android:layout_marginLeft="12dp"
                android:textAppearance="?android:textAppearanceLarge"
                />
            <View
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="#666"
                android:layout_below="@+id/aboutme"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/line"
                />
            <TextView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/about"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/line"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <com.gc.materialdesign.views.ButtonFloat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/float_edit"
                android:alpha="0.7"
                android:layout_marginLeft="245dp"
                materialdesign:iconDrawable="@mipmap/edit"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/location"
                android:id="@+id/contactdetails"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/about"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableLeft="@drawable/loc"
                android:layout_marginLeft="12dp"
                android:id="@+id/location"
                android:textColor="#ff373737"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableLeft="@drawable/mail"
                android:layout_marginLeft="12dp"
                android:id="@+id/email"
                android:layout_marginTop="12dp"
                android:textColor="#ff373737"
                android:layout_below="@+id/location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:drawableLeft="@drawable/contact"
                android:id="@+id/phone"
                android:textColor="#ff373737"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
